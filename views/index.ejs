<div class="author">
  <h1 class="author__heading">Hi, I am Parimal.</h1>
  <p class="author__body">Web developer and content creator.</p>
</div>

<img src="/img/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">

<section>
  <h2 class="articles__heading">Latest post</h2>
  <ul class="article-ul">
    <% for( let index = 0; index < data.length; index++ ) { %>
      <li>
        <a href="/post/<%= data[index]._id %>">
          <span><%= data[index].title %></span>
          <span class="article-list__date"><%= data[index].createdAt.toDateString() %></span>
        </a>
      </li>
    <% } %>
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older posts  </a>
  <% } %>

</section>
